<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/login.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Document</title>
</head>
<body>
<div class="container">
  <!-- Form -->
  <div class="frm-wrapper">
    <div class="frm-header">
      <h1 class="title">User Sign In</h1>
      <p class="subtitle">Log In To Your Account..</p>
{{#if Error}}
      <label for="" style="color: red;
                            border-bottom: 2px solid;
                            margin-bottom: 20px;">Invalid Email or password</label>
      {{/if}}
    </div>
    <form class="frm" action="/loginForm" method="post">
      <div class="frm-group">
        <label for="fname">E-mail  <label style="color: red;" for="" id="emailerrormsg"></label></label>
      <input type="email" name="email" id="email" onkeyup="return emailvalidate()" required="required" placeholder="Email Address"></input>
      </div>
      <div class="frm-group">
        <label for="lname">Password</label>
        <input type="password" name="password" required="required" placeholder="Password"></input>
      </div>
      <input type="submit" class="btn" id="btn" value="SignIn">
    </form>
      <!-- Footer -->
  <footer class="footer">
    <p class="footer-txt">
     <span style="color: black;"> Create an account? </span><a href="/signup"><span style="color: aqua;">SignUp Here</span></a></p>
    </p>
  </footer>
  <!-- end Footer -->
  </div>
  <!-- end Form -->


</div>

    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>


<script>

function emailvalidate(){
    var email = document.getElementById("email").value;
    var emailPattern = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;

    if(email == ""){
        document.getElementById("emailerrormsg").innerHTML = "Email is mandatory"
        return false;
    }else if(email.match(emailPattern)){
        document.getElementById("emailerrormsg").innerHTML = "";
        return true;
    }else{
        document.getElementById("emailerrormsg").innerHTML = "Enter correct Email"
        return false;
    }
}

</script>
</body>
</html>

